{
  "name": "empowerkids-platform",
  "version": "1.0.0",
  "description": "A gamified platform for children's rights education",
  "main": "homepage.html",
  "scripts": {
    "dev": "serve . -p 3000",
    "start": "serve . -p 3000",
    "build": "tailwindcss -i ./CSS/input.css -o ./CSS/output.css --watch",
    "build-prod": "tailwindcss -i ./CSS/input.css -o ./CSS/output.css --minify",
    "preview": "serve . -p 8080",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod"
  },
  "keywords": [
    "children-rights",
    "education",
    "gamification",
    "learning-platform"
  ],
  "author": "EmpowerKids Team",
  "license": "MIT",
  "devDependencies": {
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.17"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
